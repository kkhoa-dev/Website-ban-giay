@model QLBanGiay.GIAY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAmin.cshtml";
}




<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                @Html.Action("QuanLiPartial", "Home")
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                @Html.Action("NavtopPartial", "Home")
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Thêm sản phẩm</h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Sản phẩm mới </h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a href="#">Settings 1</a>
                                                </li>
                                                <li>
                                                    <a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <br />
                                    @using (Html.BeginForm("Create", "Giay", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Tên giày: </label>
                                                <div class="col-md-10">
                                                    <input type="text" size="70" name="sTenGiay" value="@ViewBag.TenGiay" required />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Giá bán: </label>
                                                <div class="col-md-10">
                                                    <input type="number" min="1" required name="mGiaBan" value="@ViewBag.GiaBan" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Size giày: </label>
                                                <div class="col-md-10">
                                                    <input type="number" min="1" required name="iSize" value="@ViewBag.Size" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Mô tả: </label>
                                                <div class="col-md-10">
                                                    <textarea name="sMoTa">@ViewBag.MoTa</textarea>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Ảnh giày: </label>
                                                <div class="col-md-10">
                                                    <input type="file" name="fFileUpload" />
                                                    @ViewBag.ThongBao
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Ngày cập nhật: </label>
                                                <div class="col-md-10">
                                                    <input type="date" name="dNgayCapNhat" required />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Số lượng bán: </label>
                                                <div class="col-md-10">
                                                    <input type="number" min="1" required name="iSoLuong" value="@ViewBag.SoLuong" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Thương hiệu: </label>
                                                <div class="col-md-10">
                                                    @Html.DropDownList("MaTH")
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Loại giày: </label>
                                                <div class="col-md-10">
                                                    @Html.DropDownList("MaLoaiGiay")
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    
</body>





