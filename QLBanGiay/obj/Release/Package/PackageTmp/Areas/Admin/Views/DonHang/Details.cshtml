@model QLBanGiay.DONDATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAmin.cshtml";
}



<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                @Html.Action("QuanLiPartial", "Home")
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                @Html.Action("NavtopPartial", "Home")
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Chi tiết sản phẩm</h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Chi tiết <small>different form elements</small></h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a href="#">Settings 1</a>
                                                </li>
                                                <li>
                                                    <a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <br />
                                    <dl class="dl-horizontal">

                                        <dt>
                                            Mã đơn hàng
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.MaDonHang)
                                        </dd>

                                        <dt>
                                            Mã khách hàng
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.MaKH)
                                        </dd>

                                        <dt>
                                            Ngày đặt
                                        </dt>

                                        <dd>
                                            @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
                                        </dd>

                                        <dt>
                                            Ngày giao
                                        </dt>

                                        <dd>
                                            @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
                                        </dd>

                                        <dt>
                                            Thanh toán
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.DaThanhToan)
                                        </dd>


                                        <dt>
                                            Tình trạng giao hàng
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
                                        </dd>
                                     
                                    </dl>
                                </div>
                                <div>
                                    <a href="@Url.Action("Edit", new { id = Model.MaDonHang })" class="btn btn-warning" role="button">Sửa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
</body>



