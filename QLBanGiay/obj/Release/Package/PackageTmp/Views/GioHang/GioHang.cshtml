
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-bottom:100px;">
    <h2 style="text-align:center;">THÔNG TIN GIỎ HÀNG</h2>
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>Tên giày</th>
                <th>Size</th>
                <th>Hình ảnh</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.sTenGiay
                    </td>
                    <td>
                        @item.sSizeGiay
                    </td>
                    <td>
                        <img src="~/Images/@item.sAnhGiay" style="width:100px;" />
                    </td>
                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMaGiay = item.iMaGiay }))
                    {
                        <td align="center"><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:#f4ff94" /></td>
                        <td align="center">@string.Format("{0:#,##0,0}", item.dDonGia)</td>
                        <td align="center">@string.Format("{0:#,##0,0}", item.dThanhTien)</td>
                        <td><a href="@Url.Action("ChiTietGiay", "Home", new { id = item.iMaGiay })">Chi tiết</a></td>
                        <td>@Html.ActionLink("Xoá", "XoaSPKhoiGioHang", new { @iMaGiay = item.iMaGiay })</td>
                        <td><input type="submit"  class="btn btn-primary" value="Cập nhật" /></td>
                    }
                </tr>
            }

        </tbody>
        <tr>
            <td colspan="4" style="text-align:right; color: red; font-weight:bold;padding-right:100px">
                Tổng số lượng: @string.Format("{0:#,##0}", @ViewBag.TongSoLuong)
            </td>
            <td colspan="5" style="text-align:center; color: red; font-weight:bold;">
                Tổng tiền: @string.Format("{0:#,##0,0}", @ViewBag.TongTien) VNĐ
            </td>
        </tr>
        <tr style="font-weight:bold; color: blue;text-align:right;">
            <td colspan="9">
                @Html.ActionLink("Xoá giỏ hàng", "XoaGioHang")
            </td>
        </tr>
        <tr style="font-weight:bold; color: blue;text-align:center;">
            <td colspan="9">
                <a href="@Url.Action("DatHang","GioHang")" class="btn btn-success" >
                    <span style="font-weight:bold">Đặt hàng</span>
                </a>
               
            </td>
        </tr>

    </table>
</div>



