
<div class="row text-center">
    @foreach (var giaymoi in Model)
    {
        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@giaymoi.AnhGiay" alt="Thumbnail Image 1" height="100px" width="120px" class="img-responsive img-rounded imgbook ">
                <div class="caption">
                    <p><a href="@Url.Action("chiTietGiay","Home", new {id = giaymoi.MaGiay})">@giaymoi.TenGiay</a></p>
                    <p> @Html.FormatValue(giaymoi.GiaBan, "{0:#,##0}") VNĐ</p>
                    <p><a href="@Url.Action("ThemGioHang", "GioHang", new { mg = giaymoi.MaGiay, url = Request.Url.ToString() })" class="btn btn-warning" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart</a></p>
                </div>
            </div>
        </div>
    }

</div>


